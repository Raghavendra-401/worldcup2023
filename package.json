{
    "name": "worldcup2k23",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js-community/odata-v2-adapter": "^1.11.7",
        "@sap/cds": "^7",
        "@sap/cds-hana": "^2",
        "@sap/hana-client": "^2.18.24",
        "@sap/xssec": "^3",
        "express": "^4",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1.3.1",
        "@sap/cds-dk": "^7",
        "@sap/hdi-deploy": "4.8.2",
        "@sap/ux-specification": "^1.108.16",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.1.6"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-cricketui": "cds watch --open cricketui/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy worldcup2k23 --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "auth": {
                "[development]": {
                    "kind": "basic",
                    "users": {
                        "chairman@icc.com": {},
                        "president@icc.com": {}
                    }
                }
            },
            "[production]": {
                "auth": "xsuaa"
            },
            "db": "hana"
        },
        "hana": {
            "deploy-format": "hdbtable"
        },
        "cov2ap": {
            "plugin": true
        }
    }
}